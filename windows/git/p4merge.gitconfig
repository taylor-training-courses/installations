[user]
        name = Your Name
        email = your.name@example.com
[core]
        editor = atom --wait
        autocrlf = true
[push]
        default = simple
[diff]
        tool = p4merge
[difftool]
        prompt = false
[difftool "p4merge"]
        path = C:/Program Files/Perforce/perforce.exe
[merge]
        tool = p4merge
[mergetool]
        prompt = false
[mergetool "p4merge"]
        path = C:/Program Files/Perforce/perforce.exe

